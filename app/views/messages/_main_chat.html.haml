.chat-main
  .main-header
    .left-box
      %h2.left-box__group-name 
        = @group.name
      %ul.left-box__member-list
        member :
      - @group.users.each do |user|
        %li.left-box__member-list-member 
          = user.name
    = link_to "Edit", edit_group_path(@group.id), class: 'edit-btn'
  .messages
    = render @messages
  .form
    = form_for [@group, @message] do |f|
      .contents
        = f.text_field :content, class: "contents__text", placeholder: "type a message"
        = f.label :image, class: "contents__image" do
          = icon('fas', 'image')
          = f.file_field :image, type: "file"
      = f.submit 'Send', class: "send-btn" 